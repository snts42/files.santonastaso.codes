# Personal Terraform Configuration
# This file contains your actual resource names and settings.
# Copy this to terraform.tfvars.personal and customize for your environment.
# The .personal file is gitignored and won't be committed.

# Project Configuration (Your Actual Settings)
project_name = "files-santonastaso"
environment = "production"
aws_region = "eu-west-2"

# Storage Configuration (Your Actual Resources)
s3_bucket_name = "files-santonastaso-production"
dynamodb_table_name = "files-santonastaso-metadata"

# Domain Configuration (Your Actual Domain)
domain_name = "files.santonastaso.codes"
cors_origins = [
  "https://files.santonastaso.codes",
  "http://localhost:8000"
]

# Application Configuration
file_retention_days = 3
max_file_size_mb = 100

# Lambda Configuration
lambda_timeout = 30
lambda_memory = 1024

# Development Settings
use_lambda = true

# Note: Copy this to terraform.tfvars.personal for your actual deployments
