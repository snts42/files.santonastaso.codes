# Environment Variables Template
# Copy this file to .env and fill in your values

# Project Configuration
PROJECT_NAME=secure-file-sharing
ENVIRONMENT=production

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# AWS Resources (must be globally unique)
S3_BUCKET_NAME=your-unique-bucket-name
DDB_TABLE_NAME=your-dynamodb-table-name

# Application URLs
FRONTEND_BASE_URL=https://your-domain.com
API_BASE_URL=https://your-api-domain.com

# CORS Configuration (comma-separated)
CORS_ORIGINS=https://your-domain.com,http://localhost:8000,http://localhost:8001

# File Configuration
MAX_FILE_SIZE_MB=5
FILE_RETENTION_DAYS=7
MAX_DOWNLOADS_PER_FILE=5
MAX_UPLOADS_PER_HOUR=10

# Security
PRESIGNED_UPLOAD_TTL_SECONDS=300
PRESIGNED_DOWNLOAD_TTL_SECONDS=300

# Development Options
USE_LOCALSTACK=false
LOCALSTACK_ENDPOINT=http://localhost:4566
AWS_S3_FORCE_PATH_STYLE=false
